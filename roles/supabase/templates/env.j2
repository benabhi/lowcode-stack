# ==============================================================================
# Supabase Environment Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY
# ==============================================================================

############
# Secrets
# YOU MUST CHANGE THESE BEFORE GOING INTO PRODUCTION
############

POSTGRES_PASSWORD={{ supabase_postgres_password }}
JWT_SECRET={{ supabase_jwt_secret }}
ANON_KEY={{ supabase_anon_key }}
SERVICE_ROLE_KEY={{ supabase_service_role_key }}
DASHBOARD_USERNAME={{ supabase_dashboard_username }}
DASHBOARD_PASSWORD={{ supabase_dashboard_password }}

############
# Database - You can change these to any PostgreSQL database that has logical replication enabled.
############

POSTGRES_HOST={{ supabase_postgres_host }}
POSTGRES_DB={{ supabase_postgres_db }}
POSTGRES_PORT=5432
# default user is postgres

############
# API Proxy - Configuration for the Kong Reverse proxy.
############

KONG_HTTP_PORT={{ supabase_api_port }}
KONG_HTTPS_PORT=8443

############
# API - Configuration for PostgREST.
############

PGRST_DB_SCHEMAS=public,storage,graphql_public

############
# Auth - Configuration for the GoTrue authentication server.
############

## General
SITE_URL={{ supabase_site_url }}
ADDITIONAL_REDIRECT_URLS=
JWT_EXPIRY={{ supabase_jwt_expiry }}
DISABLE_SIGNUP=false
API_EXTERNAL_URL={{ supabase_api_external_url }}

## Mailer Config
MAILER_URLPATHS_CONFIRMATION="/auth/v1/verify"
MAILER_URLPATHS_INVITE="/auth/v1/verify"
MAILER_URLPATHS_RECOVERY="/auth/v1/verify"
MAILER_URLPATHS_EMAIL_CHANGE="/auth/v1/verify"

## Email auth
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
SMTP_ADMIN_EMAIL={{ supabase_smtp_from }}
SMTP_HOST={{ supabase_smtp_host }}
SMTP_PORT={{ supabase_smtp_port }}
SMTP_USER={{ supabase_smtp_user }}
SMTP_PASS={{ supabase_smtp_password }}
SMTP_SENDER_NAME=Supabase

## Phone auth
ENABLE_PHONE_SIGNUP=false
ENABLE_PHONE_AUTOCONFIRM=false

## Anonymous auth
ENABLE_ANONYMOUS_USERS=false

############
# Studio - Configuration for the Dashboard
############

STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Default Project

STUDIO_PORT={{ supabase_studio_port }}
# replace if you intend to use Studio outside of localhost
SUPABASE_PUBLIC_URL={{ supabase_api_external_url }}

# Enable webp support
IMGPROXY_ENABLE_WEBP_DETECTION=true

############
# Functions - Configuration for Functions
############
# NOTE: VERIFY_JWT applies to all functions. Per-function duplicates allowed when set to true
FUNCTIONS_VERIFY_JWT=false

############
# Logs - Configuration for Logflare
# Please refer to https://supabase.com/docs/reference/self-hosting-analytics/introduction
############

LOGFLARE_LOGGER_BACKEND_API_KEY=your-super-secret-and-long-logflare-key

# Change vector.toml sinks to reflect this change
LOGFLARE_API_KEY=your-super-secret-and-long-logflare-key

# Docker socket location - this value will differ depending on your OS
DOCKER_SOCKET_LOCATION=/var/run/docker.sock

# Google Cloud Project details
GOOGLE_PROJECT_ID=GOOGLE_PROJECT_ID
GOOGLE_PROJECT_NUMBER=GOOGLE_PROJECT_NUMBER

############
# Storage - Configuration for Storage
############

STORAGE_BACKEND={{ supabase_storage_backend }}
STORAGE_S3_BUCKET=
STORAGE_S3_ENDPOINT=
STORAGE_S3_REGION=
GLOBAL_S3_BUCKET=
FILE_SIZE_LIMIT={{ supabase_file_size_limit }}
STORAGE_FILE_BACKEND_PATH=/var/lib/storage
TENANT_ID=stub
REGION=stub
STORAGE_S3_FORCE_PATH_STYLE=false
AWS_DEFAULT_REGION=stub

############
# Realtime - Configuration for Realtime
############

# defaults to 200
# REALTIME_DB_POOL_SIZE=200

############
# POOLER - Configuration for Supavisor connection pool
############

POOLER_DEFAULT_POOL_SIZE=20
POOLER_MAX_CLIENT_CONN=100
POOLER_PROXY_PORT_TRANSACTION=6543
POOLER_TENANT_ID=default
POOLER_DB_POOL_SIZE=20

# Secret keys for pooler
SECRET_KEY_BASE={{ supabase_jwt_secret }}
VAULT_ENC_KEY={{ supabase_jwt_secret[:32] }}

# defaults to 4000
# POOLER_PORT=4000
# defaults to transaction
# POOLER_POOL_MODE=transaction
