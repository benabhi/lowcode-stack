# ==============================================================================
# Nginx Site Configuration: {{ item.name }}
# Generated by Ansible - DO NOT EDIT MANUALLY
# ==============================================================================

upstream {{ item.name }}_upstream {
    server {{ item.upstream_host | default('127.0.0.1') }}:{{ item.upstream_port }};
    keepalive 32;
}

# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name {{ item.domain }};

    # Let's Encrypt challenge
    location /.well-known/acme-challenge/ {
        root {{ nginx_webroot_path }};
    }

    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ item.domain }};

    # SSL certificates
    ssl_certificate {{ nginx_ssl_cert_path }}/{{ item.domain }}/fullchain.pem;
    ssl_certificate_key {{ nginx_ssl_cert_path }}/{{ item.domain }}/privkey.pem;

    # SSL configuration
    include /etc/nginx/snippets/ssl-params.conf;

    # Security headers
{% for header, value in nginx_security_headers.items() %}
    add_header {{ header }} "{{ value }}" always;
{% endfor %}

    # Logging
    access_log /var/log/nginx/{{ item.name }}.access.log;
    error_log /var/log/nginx/{{ item.name }}.error.log;

    # Client body size
    client_max_body_size {{ item.max_body_size | default('50M') }};

    # Static assets - no rate limiting
    location ~* ^/(assets|static|_next|favicon\.ico|robots\.txt) {
        proxy_pass http://{{ item.name }}_upstream;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_valid 200 1d;
        expires 1d;
        add_header Cache-Control "public, immutable";
    }

    # Proxy settings
    location / {
{% if nginx_rate_limit_enabled %}
        # Rate limiting (only for non-static requests)
        limit_req zone=api burst={{ nginx_rate_limit_burst }} nodelay;
{% endif %}
{% if item.basic_auth | default(false) %}
        # Basic Authentication
        auth_basic "{{ item.basic_auth_realm | default('Restricted Area') }}";
        auth_basic_user_file /etc/nginx/.htpasswd_{{ item.name }};
{% endif %}

        proxy_pass http://{{ item.name }}_upstream;
        proxy_http_version 1.1;

        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

{% if item.websocket | default(false) %}
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
{% else %}
        proxy_read_timeout 60s;
{% endif %}

        # Proxy buffering
        proxy_buffering off;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
    }

    # Health check endpoint (optional)
    location /nginx-health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}
