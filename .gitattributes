# ==============================================================================
# Git Attributes - Ensure proper line endings
# ==============================================================================

# Default behavior
* text=auto

# Shell scripts must use LF
*.sh text eol=lf

# Dockerfiles should use LF
Dockerfile text eol=lf
docker-entrypoint.sh text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Jinja2 templates
*.j2 text eol=lf

# Config files
ansible.cfg text eol=lf
.vault_pass text eol=lf

# Windows specific files
*.bat text eol=crlf
*.ps1 text eol=crlf
